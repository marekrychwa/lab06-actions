name: Hello
on: workflow_dispatch

jobs:
  say-hi:
    runs-on: ubuntu-latest
    steps:
      - name: Pierwszy krok
        run: echo "Hello, GitHub Actions!"

  say-bye:
    needs: say-hi
    runs-on: ubuntu-latest
    steps:
      - name: Drugi krok
        run: echo "To jest drugi job, ktory czekal na pierwszy!"
